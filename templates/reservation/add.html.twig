                    </div>
                </div>#}
            </div>

            <div class="col-6 text-end">
                <button type="submit" class="btn btn-success">Inscription</button>
            </div>

            {{ form_end(reservationForm) }}
        </section>
    </main>

    {% set existingReservations = [] %}
    {% for reservation in timeReservations %}
        {% set existingReservations = existingReservations|merge([{'start': reservation.startplay, 'end': reservation.endplay}]) %}
    {% endfor %}


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.min.js"></script>

    <script>

        $(document).ready(function() {
            let existingReservations = {{ existingReservations|json_encode|raw }};


            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd ',
                weekStart: 1,
                startDate: "-0d",
                endDate: "+3m",
                maxViewMode: 1,
                language: "fr",
                todayBtn: "linked",
                todayHighlight: true,

            }).on("changeDate", function(e) {
                let selectedDate = $(this).datepicker("getDate");
                let year = selectedDate.getFullYear();
                let month = selectedDate.getMonth() + 1; // getMonth() returns a 0-based index
                let day = selectedDate.getDate();
                let userChoiceDate = year + '-' + (month < 10 ? '0' + month : month) + '-' + (day < 10 ? '0' + day : day);
                console.log(userChoiceDate)

                $('.timepicker').timepicker({
                    timeFormat: 'H:i',
                    interval: 30,
                    minTime: '8:00',
                    maxTime: '23:00',
                    startTime: '08:00',
                    dynamic: false,
                    dropdown: true,
                    scrollbar: true,
                    disableTimeRanges: existingReservations.map(function(reservation) {

                        let startReservationDate = new Date(reservation.start.date);
                        let startHours = startReservationDate.getHours();
                        let startMinutes = startReservationDate.getMinutes();
                        let startTime = startHours + ':' + (startMinutes < 10 ? '0' + startMinutes : startMinutes);

                        let endReservationDate = new Date(reservation.end.date);
                        let endHours = endReservationDate.getHours();
                        let endMinutes = endReservationDate.getMinutes();
                        let endTime = endHours + ':' + (endMinutes < 10 ? '0' + endMinutes : endMinutes);
                        return [startTime, endTime];
                    }),

                });

            });
        });

    </script>
{% endblock %}

