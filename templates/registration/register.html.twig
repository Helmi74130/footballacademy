{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center">Inscription</h1>

    <main class="container">
        <section class="row justify-content-center">
            {{ form_start(registrationForm, { 'attr': {'class': 'col-8 bg-light p-5 mt-2'} }) }}

            <div class="row justify-content-around mt-3">
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">{{ form_label(registrationForm.name) }}</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                              <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="text-danger">
                        <small>{{ form_errors(registrationForm.name) }}</small>
                    </div>
                </div>
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">{{ form_label(registrationForm.firstname) }}</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-square" viewBox="0 0 16 16">
                              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                              <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z"/>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.firstname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="text-danger">
                        <small>{{ form_errors(registrationForm.firstname) }}</small>
                    </div>
                </div>
            </div>

            <div class="row justify-content-around mt-3">
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">{{ form_label(registrationForm.email) }}</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope-at" viewBox="0 0 16 16">
                              <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z"/>
                              <path d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648Zm-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z"/>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="text-danger">
                        <small>{{ form_errors(registrationForm.email) }}</small>
                    </div>
                </div>
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">{{ form_label(registrationForm.phone) }}</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16">
                              <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
                              <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.phone, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="text-danger">
                        <small>{{ form_errors(registrationForm.phone) }}</small>
                    </div>
                </div>
            </div>

            <div class="row justify-content-between mt-3">
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">{{ form_label(registrationForm.plainPassword) }}</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                              <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                        <div class="text-danger">
                            <small>{{ form_errors(registrationForm.plainPassword) }}</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <p class="ms-2 mb-1 fs-5">Validez votre mot de passe *</p>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-dark text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                              <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                            </svg>
                        </span>
                        <input class="form-control" type="password">
                        <div class="text-danger">
                            <small>{{ form_errors(registrationForm.plainPassword) }}</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-6 d-flex fs-5 checkbox-xl">
                    <p class="">{{ form_label(registrationForm.agreeTerms) }}</p>
                    <div>
                        {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'ms-3 form-check-input checkbox'} }) }}
                        <div class="text-danger">
                            <small>{{ form_errors(registrationForm.agreeTerms) }}</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-end">
                    <button type="submit" class="btn btn-success">Inscription</button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </section>
    </main>

    <style>
        .checkbox:checked{
            background: black;
        }
        .form-control:focus{
            border-color: #198754;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px #198754;
        }
    </style>

{% endblock %}
